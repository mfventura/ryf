<div class="ryf-roll damage-roll">
  <div class="roll-header">
    <div class="roll-title">
      <h3>{{localize "RYF.Damage"}}: {{weapon.name}}</h3>
    </div>
  </div>

  <div class="damage-breakdown">
    <div class="damage-section base-damage">
      <div class="section-label">{{localize "RYF.BaseDamage"}}</div>
      <div class="damage-formula">{{baseDamage}}</div>
      
      <div class="dice-results">
        {{#each baseRoll.rolls as |roll|}}
          <div class="die d6">
            <i class="fas fa-dice-d6"></i>
            <span class="die-value">{{roll}}</span>
          </div>
        {{/each}}
        
        {{#if baseRoll.explosions.length}}
        <div class="explosions">
          <i class="fas fa-burst"></i>
          {{#each baseRoll.explosions as |explosion|}}
            <span class="explosion-value">+{{explosion}}</span>
          {{/each}}
        </div>
        {{/if}}
      </div>
      
      <div class="damage-subtotal">
        {{localize "RYF.Subtotal"}}: {{baseRoll.total}}
      </div>
    </div>

    {{#if (gt damageBonus 0)}}
    <div class="damage-section bonus-damage">
      <div class="section-label">{{localize "RYF.DamageBonus"}}</div>
      <div class="damage-value">+{{damageBonus}}</div>
    </div>
    {{/if}}

    {{#if (gt bonus 0)}}
    <div class="damage-section extra-bonus">
      <div class="section-label">{{localize "RYF.ExtraBonus"}}</div>
      <div class="damage-value">+{{bonus}}</div>
    </div>
    {{/if}}

    {{#if (gt effectBonus 0)}}
    <div class="damage-section effect-bonus">
      <div class="section-label"><i class="fas fa-star"></i> {{localize "RYF.EffectBonus"}}</div>
      <div class="damage-value">+{{effectBonus}}</div>
    </div>
    {{/if}}

    {{#if criticalRoll}}
    <div class="damage-section critical-damage">
      <div class="section-label">
        <i class="fas fa-star"></i> {{localize "RYF.CriticalDamage"}} ({{criticalDice}}d6)
      </div>
      
      <div class="dice-results">
        {{#each criticalRoll.rolls as |roll|}}
          <div class="die d6 critical">
            <i class="fas fa-dice-d6"></i>
            <span class="die-value">{{roll}}</span>
          </div>
        {{/each}}
        
        {{#if criticalRoll.explosions.length}}
        <div class="explosions">
          <i class="fas fa-burst"></i>
          {{#each criticalRoll.explosions as |explosion|}}
            <span class="explosion-value">+{{explosion}}</span>
          {{/each}}
        </div>
        {{/if}}
      </div>
      
      <div class="damage-subtotal">
        {{localize "RYF.Subtotal"}}: {{criticalRoll.total}}
      </div>
    </div>
    {{/if}}
  </div>

  <div class="damage-total">
    <div class="total-label">{{localize "RYF.TotalDamage"}}</div>
    <div class="total-value">{{total}}</div>
  </div>

  <div class="damage-actions">
    <button type="button" class="apply-damage-button" data-damage="{{total}}" data-damage-type="physical">
      <i class="fas fa-heart-broken"></i> {{localize "RYF.Combat.ApplyDamage"}}
    </button>
  </div>

  <div class="damage-note">
    <i class="fas fa-info-circle"></i>
    {{localize "RYF.DamageNote"}}
  </div>
</div>

