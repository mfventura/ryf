<form class="custom-pyramid-config">
  <div class="form-header">
    <p class="notes">{{localize "RYF.Settings.CustomPyramidMenu.Description"}}</p>
  </div>

  <div class="presets-section">
    <h3>{{localize "RYF.Settings.Presets"}}</h3>
    <div class="preset-buttons">
      {{#each presets as |preset key|}}
        <button type="button" class="preset-button" data-preset="{{key}}">
          <strong>{{preset.name}}</strong>
          <span class="preset-description">{{preset.description}}</span>
        </button>
      {{/each}}
    </div>
  </div>

  <div class="pyramid-inputs">
    <h3>{{localize "RYF.Settings.CustomPyramid"}}</h3>
    
    <div class="form-group">
      <label for="level6">{{localize "RYF.Settings.SkillLevel"}} 6:</label>
      <input type="number" name="level6" value="{{pyramid.level6}}" min="0" max="20" />
      <span class="hint">{{localize "RYF.Settings.SkillLevel6Hint"}}</span>
    </div>

    <div class="form-group">
      <label for="level5">{{localize "RYF.Settings.SkillLevel"}} 5:</label>
      <input type="number" name="level5" value="{{pyramid.level5}}" min="0" max="20" />
      <span class="hint">{{localize "RYF.Settings.SkillLevel5Hint"}}</span>
    </div>

    <div class="form-group">
      <label for="level4">{{localize "RYF.Settings.SkillLevel"}} 4:</label>
      <input type="number" name="level4" value="{{pyramid.level4}}" min="0" max="20" />
      <span class="hint">{{localize "RYF.Settings.SkillLevel4Hint"}}</span>
    </div>

    <div class="form-group">
      <label for="level3">{{localize "RYF.Settings.SkillLevel"}} 3:</label>
      <input type="number" name="level3" value="{{pyramid.level3}}" min="0" max="20" />
      <span class="hint">{{localize "RYF.Settings.SkillLevel3Hint"}}</span>
    </div>

    <div class="form-group">
      <label for="level2">{{localize "RYF.Settings.SkillLevel"}} 2:</label>
      <input type="number" name="level2" value="{{pyramid.level2}}" min="0" max="20" />
      <span class="hint">{{localize "RYF.Settings.SkillLevel2Hint"}}</span>
    </div>

    <div class="form-group">
      <label for="level1">{{localize "RYF.Settings.SkillLevel"}} 1:</label>
      <input type="number" name="level1" value="{{pyramid.level1}}" min="0" max="20" />
      <span class="hint">{{localize "RYF.Settings.SkillLevel1Hint"}}</span>
    </div>
  </div>

  <div class="pyramid-summary">
    <h4>{{localize "RYF.Settings.TotalSkills"}}: <span class="total-skills">{{totalSkills}}</span></h4>
  </div>

  <div class="form-footer">
    <button type="submit" class="save-button">
      <i class="fas fa-save"></i> {{localize "RYF.Settings.Save"}}
    </button>
  </div>
</form>

