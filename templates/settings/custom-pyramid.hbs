<form class="custom-pyramid-config">
  <div class="form-header">
    <p class="notes">{{localize "RYF.Settings.CustomPyramidMenu.Description"}}</p>
    <p class="notes"><strong>{{localize "RYF.Settings.MaxSkillLevel.Name"}}:</strong> {{maxLevel}}</p>
    <p class="hint">{{localize "RYF.Settings.MaxSkillLevel.ConfigHint"}}</p>
  </div>

  <div class="presets-section">
    <h3>{{localize "RYF.Settings.Presets"}}</h3>
    <div class="preset-buttons">
      {{#each presets as |preset key|}}
        <button type="button" class="preset-button" data-preset="{{key}}">
          <strong>{{preset.name}}</strong>
          <span class="preset-description">{{preset.description}}</span>
        </button>
      {{/each}}
    </div>
  </div>

  <div class="pyramid-inputs">
    <h3>{{localize "RYF.Settings.CustomPyramid"}}</h3>

    {{#each levels as |levelData|}}
    <div class="form-group">
      <label for="level{{levelData.level}}">{{localize "RYF.Settings.SkillLevel"}} {{levelData.level}}:</label>
      <input type="number" name="level{{levelData.level}}" value="{{levelData.count}}" min="0" max="20" />
    </div>
    {{/each}}
  </div>

  <div class="pyramid-summary">
    <h4>{{localize "RYF.Settings.TotalSkills"}}: <span class="total-skills">{{totalSkills}}</span></h4>
  </div>

  <div class="form-footer">
    <button type="submit" class="save-button">
      <i class="fas fa-save"></i> {{localize "RYF.Settings.Save"}}
    </button>
  </div>
</form>

